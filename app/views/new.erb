<div class="column-md-12 text-center well">
  <form action="/tasks" method="post">
    <h2>Enter a new task:</h2>
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" placeholder="Title" name="task[title]"/></br>
    </div>
    <div class="form-group">
      <label>Description</label></br>
      <textarea class="form-control" name="task[description]" placeholder="Description"></textarea><br/>
    </div>
    <input class="btn btn-primary btn-lg" type="submit"/>
  </form>
</div>
